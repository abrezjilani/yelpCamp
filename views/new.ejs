<%- include('partials/header') %>

<div class="container d-flex h-100">
  <div class="row justify-content-center align-self-center">
    <h1 class="text-center mb-3">Create a New Campground</h1>
  
    <div style="width: 30%;">
      <form action="/campgrounds" method="post"></form>
        <input
        class="form-control mb-3"
        type="text"
        name="campName"
        placeholder="Name"
        />
        <input
        class="form-control mb-3"
        type="text"
        name="campImage"
        placeholder="Image URL"
        />
        <button class="btn btn-lg btn-dark btn-block mb-3">Submit</button>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
  
</div>

<%- include('partials/footer') %>
